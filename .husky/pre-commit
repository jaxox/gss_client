#!/usr/bin/env sh
. "$(dirname -- "$0")/_/husky.sh"

echo "ğŸ” Running pre-commit checks..."

# Run lint-staged for code formatting and linting
echo "ğŸ“ Linting and formatting staged files..."
npx lint-staged || {
  echo "âŒ Lint-staged failed. Please fix linting errors and try again."
  exit 1
}

# Run type checking on all packages
echo "ğŸ” Type checking..."
npm run type-check --if-present || {
  echo "âŒ Type check failed. Please fix type errors and try again."
  exit 1
}

# Run tests in CI mode (only unit tests, not E2E)
echo "ğŸ§ª Running unit tests..."
npm run test:ci || {
  echo "âŒ Tests failed! Please fix failing tests and try again."
  exit 1
}

echo "âœ… All pre-commit checks passed!"
