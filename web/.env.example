# GSS Web App - Environment Configuration

# ==========================================
# Vite Configuration
# ==========================================

# Development server port
VITE_PORT=5173

# ==========================================
# API Configuration
# ==========================================

# Backend API Base URL
VITE_API_BASE_URL=http://localhost:3000/api

# ==========================================
# Authentication Configuration
# ==========================================

# Google OAuth Client ID for web
VITE_GOOGLE_CLIENT_ID=your-web-google-client-id

# ==========================================
# Application Configuration
# ==========================================

# App metadata
VITE_APP_NAME=GSS Client
VITE_APP_VERSION=1.0.0
VITE_APP_DESCRIPTION=Gamified Social Sports Platform

# ==========================================
# External Services
# ==========================================

# Analytics (Google Analytics, etc.)
VITE_ANALYTICS_ENABLED=false
VITE_ANALYTICS_TRACKING_ID=

# Error tracking (Sentry, etc.)
VITE_ERROR_TRACKING_ENABLED=false
VITE_ERROR_TRACKING_DSN=

# ==========================================
# Development Settings
# ==========================================

# Enable development tools
VITE_DEV_TOOLS=true

# Source maps for debugging
VITE_SOURCE_MAPS=true

# Mock API for development
VITE_USE_MOCK_API=true
