{
  "extends": "@react-native/typescript-config",
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "@shared/*": ["../shared/src/*"],
      "@shared": ["../shared/src/index"]
    },
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true
  },
  "include": ["**/*.ts", "**/*.tsx", "../shared/src/**/*"],
  "exclude": [
    "**/node_modules",
    "**/Pods",
    "**/__tests__/**/*",
    "**/e2e/**/*",
    "**/*.backup.tsx",
    "**/*.OLD.tsx"
  ]
}
