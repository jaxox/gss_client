# GSS Mobile App - Environment Configuration

# ==========================================
# React Native Configuration
# ==========================================

# Metro bundler configuration
METRO_PORT=8081

# ==========================================
# API Configuration
# ==========================================

# Backend API Base URL (use your IP for device testing)
API_BASE_URL=http://192.168.1.100:3000/api

# ==========================================
# Authentication
# ==========================================

# Google Sign-In Configuration
GOOGLE_CLIENT_ID_IOS=your-ios-google-client-id
GOOGLE_CLIENT_ID_ANDROID=your-android-google-client-id

# ==========================================
# Platform-specific Configuration
# ==========================================

# iOS Configuration
IOS_BUNDLE_IDENTIFIER=com.gss.client
IOS_APP_STORE_ID=

# Android Configuration  
ANDROID_PACKAGE_NAME=com.gss.client
ANDROID_KEYSTORE_PASSWORD=your-keystore-password
ANDROID_KEY_PASSWORD=your-key-password

# ==========================================
# Development Settings
# ==========================================

# Enable Flipper for debugging
FLIPPER_ENABLED=true

# Enable performance monitoring  
PERFORMANCE_MONITORING=true
