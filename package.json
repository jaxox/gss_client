{
  "name": "gss-client",
  "version": "1.0.0",
  "description": "GSS Client - Multi-platform frontend for Gamified Social Sports Platform",
  "private": true,
  "workspaces": [
    "mobile",
    "web",
    "shared"
  ],
  "scripts": {
    "bootstrap": "npm install && npm run build:shared",
    "build": "npm run build:shared && npm run build:web",
    "build:shared": "npm run build --workspace=shared",
    "build:web": "npm run build --workspace=web",
    "build:mobile": "npm run build --workspace=mobile",
    "dev": "concurrently \"npm run dev --workspace=web\" \"npm run dev --workspace=shared\"",
    "dev:web": "npm run dev --workspace=web",
    "dev:mobile": "npm run start --workspace=mobile",
    "test": "npm run -ws test --if-present",
    "test:watch": "npm run -ws test:watch --if-present",
    "test:ci": "npm run -ws test:ci --if-present",
    "test:mobile": "npm -w mobile run test:ci",
    "test:web": "npm -w web run test:ci",
    "test:shared": "npm -w shared run test:ci",
    "lint": "npm run lint --workspaces",
    "lint:fix": "npm run lint:fix --workspaces",
    "type-check": "npm run type-check --workspaces",
    "clean": "npm run clean --workspaces && rm -rf node_modules",
    "prepare": "husky install",
    "metro:log": "npm run metro:log --workspace=mobile",
    "ios:no-metro": "npm run ios:no-metro --workspace=mobile"
  },
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^6.21.0",
    "@typescript-eslint/parser": "^6.21.0",
    "concurrently": "^8.2.0",
    "eslint": "^8.45.0",
    "eslint-config-prettier": "^9.1.2",
    "eslint-plugin-jest": "^29.0.1",
    "eslint-plugin-prettier": "^5.0.0",
    "husky": "^8.0.3",
    "lint-staged": "^13.2.3",
    "prettier": "^3.0.0",
    "typescript": "^5.1.6"
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{json,md,yml,yaml}": [
      "prettier --write"
    ]
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  },
  "author": "GSS Team",
  "license": "MIT",
  "main": "index.js",
  "directories": {
    "doc": "docs"
  },
  "repository": {
    "type": "git",
    "url": "git@github.com-jaxox:jaxox/gss_client.git"
  },
  "keywords": [],
  "type": "commonjs",
  "dependencies": {},
  "overrides": {
    "react": "19.1.1",
    "react-dom": "19.1.1",
    "react-test-renderer": "19.1.1",
    "@types/react": "^19.1.0",
    "@types/react-dom": "^19.1.0"
  }
}
